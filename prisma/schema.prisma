// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

// Define your database connection
datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

// Define the Prisma client generator
generator client {
  provider = "prisma-client-js"
}

model Student {
  student_id   Int          @id @default(autoincrement())
  createdAt    DateTime     @default(now())
  updatedAt    DateTime     @updatedAt()

  name         String
  address      String
  email        String       @unique
  phone_number String

  classes      StudentOnClass[]
}

model Class {
  class_id     Int          @id @default(autoincrement())
  createdAt    DateTime     @default(now())
  updatedAt    DateTime     @updatedAt()
  
  name         String
  room         String
  group        Int

  subjects     Subject[]  
  students     StudentOnClass[]
}

model Subject {
  subject_id   Int          @id @default(autoincrement())
  createdAt    DateTime     @default(now())
  updatedAt    DateTime     @updatedAt()
  
  name         String
  credit       Int

  class_id     Int?
  class        Class?        @relation(fields: [class_id], references: [class_id], onDelete: SetNull) 
}

model StudentOnClass {
  student_id   Int
  class_id     Int
  student      Student     @relation(fields: [student_id], references: [student_id], onDelete: Cascade)
  class        Class      @relation(fields: [class_id], references: [class_id], onDelete: Cascade)
  @@id([student_id, class_id])
}
